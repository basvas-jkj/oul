{
    "compilerOptions":
    {
        "target": "es6",
        "lib": ["ES2022"],
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "outDir": "build",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
